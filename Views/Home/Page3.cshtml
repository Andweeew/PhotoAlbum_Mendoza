    <style>
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            background-color: #F3DADF;
        }

        h1 {
            position: relative;
            margin-left: 40px;
            margin-bottom: 20px;
            font-family: 'Oswald', sans-serif;
            font-size: 44px;
            text-transform: uppercase;
            color: #03122F;
        }

        p {
            position: relative;
            margin-left: 40px;
            margin-bottom: 20px;
            font-family: 'Oswald', sans-serif;
            font-size: 10px;
            color: #03122F;
        }

        .gallery {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            grid-gap: 2em;
            padding: 2em;
        }

        .image-container {
            position: relative;
        }

        img {
            width: 100%;
            border-radius: 10px;
            transition: transform 0.3s ease-in-out;
        }

        .image-container:hover img {
            transform: scale(1.05);
        }

        .overlay {
            position: absolute;
            bottom: 0;
            background: rgb(0, 0, 0);
            background: rgba(0, 0, 0, 0.5); /* Black see-through */
            color: #f1f1f1;
            width: 100%;
            transition: .5s ease;
            opacity: 0;
            color: white;
            font-size: 10px;
            padding: 20px;
            text-align: justify;
        }



        .image-container:hover .overlay {
            opacity: 1;
        }

        footer {
            background: #F1916D;
            font-size: 12px;
            padding: 10px 20px;
            text-align: center;
            letter-spacing: 3px;
            text-decoration-line: none;
        }

        a {
            text-decoration: none;
            display: inline-block;
            padding: 8px 50px;
            color: #03122F;
        }

    </style>
</head>
